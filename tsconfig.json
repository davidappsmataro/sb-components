{
  "compilerOptions": {
    "outDir": "dist",
    
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "declaration": true, /* lo pongo en el tsconfig.node.json sino genera error en los meta de las stories */
    
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    /* "allowImportingTsExtensions": true, */ /* al poner el noEmit em false tengo que comentar esta lines sino me da error */
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
